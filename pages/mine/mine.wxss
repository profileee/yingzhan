.top{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

}
.left{
  position: absolute;
  left: 0%;
  top: 0;
  width: 100%;
  height: 100%;
}
.right{
  position: absolute;
  right: -10rpx;
  top: 0;
  width: 100%;
  height: 100%;
}
.bottom{
  bottom: 0;
  left: 0;
  position: absolute;
  width: 100%;
  height: 100%;
}
.tabbar{
  position: fixed;
  bottom: 0rpx;
  height: 100%;
  width: 750rpx;
  left: 10rpx;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
    padding-bottom: 80rpx;
    border-bottom: 1px solid #ccc;
    background-color: rgba(247, 191, 107, 0.596);
    z-index: 2;
    width: 90%;
    margin-left: 5%;
    margin-top: 5%;
    border-radius: 20rpx;
  }
  .userinfo-avatar {
    overflow: hidden;
    width: 144rpx;
    height: 144rpx;
    margin-top: 80rpx;
    margin-bottom: 20rpx;
    border-radius: 50%;
  }
.text{
  color: azure;
}
.box{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-top: 10rpx;
  width: 600rpx;
  left: 62.5rpx;
  z-index: 2;
}
.image{
  width: 100rpx;
  height: 100rpx;
  padding-top: 15rpx;
}
.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20rpx;
  width: 300rpx;
  height: 150rpx;
  margin-left: 25rpx;
  background-color: rgb(247, 191, 107);
  box-shadow: 10rpx 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.item text{
  padding-bottom: 15rpx;
  margin-top: 20rpx;
  margin-left: 5rpx;
}
.button{
  position: relative;
  z-index: 2;
}